{
    "manifest_version": 3,
    "name": "MCP Web Bridge",
    "version": "0.1.0",
    "description": "Bring MCP-powered tools into ChatGPT web.",
    "action": {
        "default_title": "MCP Web Bridge"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content/bus.js",
                "content/mount.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {}
}